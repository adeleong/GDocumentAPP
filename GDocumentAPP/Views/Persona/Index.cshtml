@model IEnumerable<GDocumentAPP.Context.PERSONA>

@{
    ViewBag.Title = "Persona";
}

<h2>Listado de Persona</h2>

<p>
    @Html.ActionLink("Crear Persona", "Create",null, new { @class = "btn btn-primary" })
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>
                Nombre
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PRIMER_APELLIDO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SEGUNDO_APELLIDO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TIPO_IDENTIFICACION)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDENTIFICACION)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SEXO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EMAIL)
            </th>
            <th colspan="3"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NOMBRE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PRIMER_APELLIDO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SEGUNDO_APELLIDO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TIPO_IDENTIFICACION)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDENTIFICACION)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SEXO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMAIL)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.PERSONA_ID }, new { @class = "btn btn-default" })
                </td>
                <td>
                    @Html.ActionLink("Detalle", "Details", new { id = item.PERSONA_ID }, new { @class = " btn btn-info" })
                </td>
                <td>
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.PERSONA_ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>