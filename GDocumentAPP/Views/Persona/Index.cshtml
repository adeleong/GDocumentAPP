@using PagedList.Mvc;
@using PagedList;

@model PagedList.IPagedList<GDocumentAPP.Context.PERSONA>

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Persona";
}

<h3>Listado de Persona</h3>

<p>
    @Html.ActionLink("Crear Persona", "Create",null, new { @class = "btn btn-primary" })
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>
                Nombre
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().PRIMER_APELLIDO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().SEGUNDO_APELLIDO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().TIPO_IDENTIFICACION)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().IDENTIFICACION)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().SEXO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().EMAIL)
            </th>
            <th colspan="3"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NOMBRE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PRIMER_APELLIDO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SEGUNDO_APELLIDO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TIPO_IDENTIFICACION)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDENTIFICACION)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SEXO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMAIL)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.PERSONA_ID }, new { @class = "btn btn-default btn-sm" })
                </td>
                <td>
                    @Html.ActionLink("Detalle", "Details", new { id = item.PERSONA_ID }, new { @class = " btn btn-info btn-sm" })
                </td>
                <td>
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.PERSONA_ID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>
</div>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))