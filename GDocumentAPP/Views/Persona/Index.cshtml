@using PagedList.Mvc;
@using PagedList;

@model PagedList.IPagedList<GDocumentAPP.Context.PERSONA>

<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Persona";
}

<h3>Listado de Persona</h3>

<p>
    @Html.ActionLink(" ", "Create", null, new { @class = "btn btn-success btn-md glyphicon glyphicon-plus-sign", @title = "Crear" })
</p>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <div class="input-group">
                <input type="text" class="form-control" name="SearchString" id="search" maxlength="150" placeholder="Nombre, Primer Apellido, Cédula">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit" id="btnSearch">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->
    <p></p>
}

<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>
                Nombre
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().PRIMER_APELLIDO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().SEGUNDO_APELLIDO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().TIPO_IDENTIFICACION)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().IDENTIFICACION)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().SEXO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().EMAIL)
            </th>
            <th colspan="3"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NOMBRE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PRIMER_APELLIDO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SEGUNDO_APELLIDO)
                </td>
                <td>
                    @{ var tipoIdentificacion = item.TIPO_IDENTIFICACION == "C" ? "Cédula" : "Pasaporte";}
                    <p>@tipoIdentificacion</p>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDENTIFICACION)
                </td>
                <td>
                     @{ var sexo = item.SEXO == "M" ? "Masculino" : "Femenino";} 
                   <p>@sexo</p> 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMAIL)
                </td>
                <td align="right" >
                    @Html.ActionLink(" ", "Edit", new { id = item.PERSONA_ID }, new { @class = " btn btn-default btn-md glyphicon glyphicon-pencil ",
                                                                                      @title = "Editar" })
                
                    @Html.ActionLink(" ", "Details", new { id = item.PERSONA_ID }, new { @class = " btn btn-info btn-md  glyphicon glyphicon-eye-open",
                   @title = "Detalle" })
                
                
                    @Html.ActionLink(" ", "Delete", new { id = item.PERSONA_ID }, new { @class = " btn btn-danger btn-md  glyphicon glyphicon-trash",
                                                                                        @title = "Eliminar" })
                </td>
            </tr>
        }

    </table>
</div>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))