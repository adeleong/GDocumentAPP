@model PERSONA

@{
    ViewBag.Title = "Details";
}

<h2>Persona Detalle</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NOMBRE)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NOMBRE)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PRIMER_APELLIDO)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PRIMER_APELLIDO)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SEGUNDO_APELLIDO)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SEGUNDO_APELLIDO)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TIPO_IDENTIFICACION)
        </dt>

        <dd>
            @{ var tipoIdentificacion = Model.TIPO_IDENTIFICACION == "C" ? "Cédula" : "Pasaporte";}
            @tipoIdentificacion
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IDENTIFICACION)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IDENTIFICACION)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SEXO)
        </dt>

        <dd>
            @Html.RadioButtonFor(model => model.SEXO, "M")  Masculino
            @Html.RadioButtonFor(model => model.SEXO, "F")  Femenino
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.EMAIL)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EMAIL)
        </dd>

    </dl>
</div>

<div class="input-group col-md-push-1">
    @Html.ActionLink("Editar", "Edit", new { id = Model.PERSONA_ID }, new { @class = "btn btn-default" })
    <span> </span>
    @Html.ActionLink("Volver al Listado", "Index", null, new { @class = "btn btn-info" })
</div>

