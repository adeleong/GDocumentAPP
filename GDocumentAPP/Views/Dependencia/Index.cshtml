@using PagedList.Mvc;
@using PagedList;

@model PagedList.IPagedList<DEPENDENCIA>


@{
    ViewBag.Title = "Index";
}

<h3>Listado de Dependencias</h3>

<p>
    @Html.ActionLink(" ", "Create", null, new { @class = "btn btn-success btn-md glyphicon glyphicon-plus-sign", @title = "Crear" })
</p>


@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <div class="input-group">
                <input type="text" class="form-control" name="SearchString" id="search" maxlength="150" placeholder="Dependencia">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit" id="btnSearch">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->
    <p></p>
}


<div class="table-responsive">
<table class="table table-striped">
    <tr>
       <!--<th>
            @Html.DisplayNameFor(model => model.First().DEPENDENCIA_NOMBRE)
        </th>
        --> 
        <th>
            Dependencia
        </th>

        <th colspan="3"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DEPENDENCIA_NOMBRE)
        </td>


        <td align="right">
            @Html.ActionLink(" ", "Edit", new { id = item.DEPENDENCIA_ID }, new
               {
                   @class = " btn btn-default btn-md glyphicon glyphicon-pencil ",
                   @title = "Editar"
               })
        
        
            @Html.ActionLink(" ", "Details", new { id = item.DEPENDENCIA_ID }, new
               {
                   @class = " btn btn-info btn-md  glyphicon glyphicon-eye-open",
                   @title = "Detalle"
               })
        
        
            @Html.ActionLink(" ", "Delete", new { id = item.DEPENDENCIA_ID }, new
               {
                   @class = " btn btn-danger btn-md  glyphicon glyphicon-trash",
                   @title = "Eliminar"
               })
        </td>
    
    </tr>
}

</table>
</div>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))