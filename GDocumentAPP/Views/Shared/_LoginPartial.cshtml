@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hola " + User.Identity.GetUserName(), "Edit", "Usuario", routeValues: null, htmlAttributes: new { title = "Cuenta Usuario" })
        </li>
        <li title="Log Off"><a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-off"> </span></a></li>
    </ul>
    }
}
