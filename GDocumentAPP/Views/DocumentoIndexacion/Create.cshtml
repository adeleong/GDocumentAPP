                        @Html.ValidationMessageFor(model => model.NIVEL_CALIDAD, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CLAVE_DOCUMENTO, htmlAttributes: new { @class = "control-label col-md-2" })
