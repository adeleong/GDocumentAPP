@model TIPO_DOCUMENTO

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

<div class="panel panel-default">

    <div class="panel-heading">

        <h3 class="panel-title">Editar</h3>

    </div>



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="panel-body">
            
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.TIPO_DOCUMENTO_ID)

                <div class="form-group">
                    @Html.LabelFor(model => model.DESCRIPCION, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DESCRIPCION, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DESCRIPCION, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.REQUERIDO, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.REQUERIDO, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.REQUERIDO, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        
        </div>

        <div class="panel-footer">
            <div class="input-group col-md-push-1">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <span> </span>
                @Html.ActionLink("Volver al Listado", "Index", null, new { @class= "btn btn-info" })
            </div>
        </div>
    }



</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
