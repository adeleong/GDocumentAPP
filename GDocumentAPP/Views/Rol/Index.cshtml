@using PagedList.Mvc;
@using PagedList;

@model PagedList.IPagedList<ROL>

<link href="~/Scripts/admin2Template/dist/css/sb-admin-2.css" rel="stylesheet" />

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Rol</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <p class="panel-title">@Html.ActionLink(" ", "Create", null, new { @class = "btn btn-circle btn-md btn-success active glyphicon glyphicon-plus-sign", @title = "Crear" }) </p>
    </div>
    <div class="panel-body">

        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="input-group">
                        <input type="text" class="form-control" name="SearchString" id="search" maxlength="150" placeholder="Rol">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit" id="btnSearch">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div><!-- /input-group -->
                </div><!-- /.col-lg-6 -->
            </div><!-- /.row -->
            <p></p>
        }

        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().DESCRIPCION)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {


                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DESCRIPCION)
                        </td>


                        <td align="right">
                            @Html.ActionLink(" ", "Edit", new { id = item.ROL_ID }, new
                       {
                           @class = " btn btn-circle btn-outline btn-warning btn-md glyphicon glyphicon-pencil ",
                           @title = "Editar"
                       })


                            @Html.ActionLink(" ", "Details", new { id = item.ROL_ID }, new
                       {
                           @class = " btn btn-circle btn-outline  btn-info btn-md  glyphicon glyphicon-eye-open",
                           @title = "Detalle"
                       })


                            @Html.ActionLink(" ", "Delete", new { id = item.ROL_ID }, new
                       {
                           @class = "btn btn-circle btn-outline btn-danger btn-md  glyphicon glyphicon-trash",
                           @title = "Eliminar"
                       })
                        </td>

                    </tr>
                }

            </table>
        </div>
    </div>
    <div class="panel-footer">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>

</div>