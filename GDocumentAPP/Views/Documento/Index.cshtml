@model IEnumerable<DOCUMENTO>

<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
<!-- Custom CSS -->
<link href="~/Scripts/admin2Template/dist/css/sb-admin-2.css" rel="stylesheet" />

@{
    ViewBag.Title = "Documentos";
}

<h3>Expedientes Digitalizados</h3>

@using (Html.BeginForm())
{
    <div class="input-group">
        <span class="input-group-addon" id="sizing-addon2">Empleado</span>
   
        @Html.DropDownList("EMPLEADO_ID", null, "<seleccione>", htmlAttributes: new { @class = "form-control", @name = "EMPLEADO_ID" })
        @Html.ValidationMessageFor(Model => Model.First().EMPLEADO_ID, "", new { @class = "text-danger" })
        <span class="input-group-btn">
            <button class="btn btn-primary disabled" type="button" id="btnEmpleado" title="Empleado">
                <span class="glyphicon glyphicon-user"></span>
            </button>
        </span>
        
    </div>
    
    <br/>

    <div class="row">
        <div class="col-lg-12">
            <div class="input-group">
                <input type="text" class="form-control" name="SearchString" id="search" maxlength="150" placeholder="Nombre Documento, Extension, Fecha Creacion">
                <input type="hidden"   name="hiddenSearch" id="hiddenSearch" value="" />
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button" id="btnSearch">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->
    <p></p>
}

<div class="jumbotron">
   
    <form action="~/Documento/GuardarArchivoCargado" method="post" enctype="multipart/form-data" class="dropzone" id="dropzoneForm" >
         <div class="fallback">
            <input name="file" id="test" type="file" multiple accept='image/*, application/pdf' />
            <input type="hidden" id="EmpleadoId" value="test" />
            <input type="submit" value="Upload" />
        </div>
    </form>
</div>

<div>
    <p>@ViewBag.ExceptionEmpleadoEnBlanco</p>
</div>

