@model DOCUMENTO

@{
    ViewBag.Title = "Edit";
}

<!-- Custom CSS -->
<link href="~/Scripts/admin2Template/dist/css/sb-admin-2.css" rel="stylesheet" />

<h2>Editar Documento</h2>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"> Documento a Editar</h3>
