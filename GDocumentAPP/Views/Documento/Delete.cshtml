@model DOCUMENTO

@{
    ViewBag.Title = "Delete";
}

<!-- Custom CSS -->
<link href="~/Scripts/admin2Template/dist/css/sb-admin-2.css" rel="stylesheet" />

<h2>Eliminar Documento</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">¿Estás seguro que desea eliminar este Documento?</h3>
    </div>
    <div class="panel-body">

        <div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.CANAL_GENERACION)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CANAL_GENERACION)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FECHA_CREACION)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FECHA_CREACION)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.EXTENSION)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.EXTENSION)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.SIZE)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SIZE)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NOMBRE_DOCUMENTO)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NOMBRE_DOCUMENTO)
                </dd>

                <dt>
                    Empleado
                </dt>

                <dd>
                    @{ var EmpleadoDisplay = Model.EMPLEADO.getEmpleadoDisplay();}
                    @EmpleadoDisplay
                </dd>

                <dt>
                    Estatus
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ESTATU.DESCRIPCION)
                </dd>

                <dt>
                    Usuario
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.USUARIO.LOGIN)
                </dd>

            </dl>
        </div>
    </div>
    <div class="panel-footer">
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()


            <div class="input-group col-md-push-1">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <span> </span>
                @Html.ActionLink("Volver al Listado", "Index", null, new { @class = "btn btn-info" })
            </div>

        }

    </div>
</div>